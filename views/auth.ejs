  // Paystack + form submit
  document.getElementById('registrationForm').addEventListener('submit', async function (e) {
    e.preventDefault();

    const form = e.target;
    const formData = new FormData(form);

    // Get email & name for Paystack metadata
    const email = formData.get("email");
    const fullName = formData.get("firstName") + " " + formData.get("lastName");

    const handler = PaystackPop.setup({
      key: "pk_test_df7d3e71a4617424e9b03ce8a9da8b50f51f2d76", // replace with your key
      email: email,
      amount: 200000, // ‚Ç¶2,000 in kobo
      currency: "NGN",
      ref: "CDS-" + Math.floor(Math.random() * 1000000000 + 1),
      metadata: {
        custom_fields: [{ display_name: "Full Name", variable_name: "full_name", value: fullName }],
      },
      callback: function (response) {
        console.log("Payment successful. Ref:", response.reference);
        formData.append("paymentReference", response.reference);
        submitToBackend(formData);
      },
      onClose: function () {
        alert("Payment window closed. Registration not completed.");
      },
    });

    handler.openIframe();
  });

  // Send form data to backend
  async function submitToBackend(formData) {
    try {
      const response = await fetch("/api/register", {
        method: "POST",
        body: formData,
      });

      if (!response.ok) throw new Error("Failed to register");
      const data = await response.json();

      alert("Registration successful ‚úÖ Reference: " + data.reference);
      console.log("Saved data:", data);
    } catch (err) {
      console.error(err);
      alert("Error submitting form. Try again.");
    }
  }
</script>


