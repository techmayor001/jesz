    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script>
        // Navigation
        function showSection(sectionId, event) {
            if (event) {
                event.preventDefault();
            }
            
            document.querySelectorAll('.content-section').forEach(section => {
                section.style.display = 'none';
            });
            document.getElementById(sectionId).style.display = 'block';
            
            document.querySelectorAll('.sidebar-menu a').forEach(link => {
                link.classList.remove('active');
            });
            
            if (event && event.target) {
                event.target.classList.add('active');
            }

            if (window.innerWidth <= 992) {
                document.getElementById('sidebar').classList.remove('active');
            }
        }

        // Modal Functions
        function openModal(modalId) {
            const modal = new bootstrap.Modal(document.getElementById(modalId));
            modal.show();
        }

        // Loan Calculator
        function calculateLoan() {
            const amount = parseFloat(document.getElementById('calcAmount').value) || 0;
            const duration = parseInt(document.getElementById('calcDuration').value) || 12;
            const rate = parseFloat(document.getElementById('calcRate').value) || 5;
            
            if (amount > 0) {
                if (amount > 1350000) {
                    alert('Loan amount exceeds maximum eligible amount of â‚¦1,350,000 (3x your savings)');
                    document.getElementById('calcAmount').value = 1350000;
                    return;
                }
                
                const interest = (amount * rate * duration) / (100 * 12);
                const total = amount + interest;
                const monthly = total / duration;
                
                document.getElementById('calcResult').style.display = 'block';
                document.getElementById('monthlyPay').textContent = 'â‚¦' + monthly.toLocaleString('en-NG', {maximumFractionDigits: 2});
                document.getElementById('totalInt').textContent = 'â‚¦' + interest.toLocaleString('en-NG', {maximumFractionDigits: 2});
                document.getElementById('totalRep').textContent = 'â‚¦' + total.toLocaleString('en-NG', {maximumFractionDigits: 2});
            }
        }

        // Withdrawal Fee Calculator
        function updateWithdrawalFee() {
            const type = document.getElementById('withdrawalType').value;
            const amount = parseFloat(document.getElementById('withdrawAmount').value) || 0;
            const feeInfo = document.getElementById('withdrawalFeeInfo');
            
            if (type === 'force' && amount > 0) {
                const totalCharge = amount * 0.025;
                const initialFee = totalCharge / 2;
                const secondFee = totalCharge / 2;
                const firstBatch = (amount / 2) - initialFee;
                
                document.getElementById('withdrawAmountDisplay').textContent = 'â‚¦' + amount.toLocaleString('en-NG');
                document.getElementById('initialFee').textContent = 'â‚¦' + initialFee.toLocaleString('en-NG', {maximumFractionDigits: 2});
                document.getElementById('secondFee').textContent = 'â‚¦' + secondFee.toLocaleString('en-NG', {maximumFractionDigits: 2});
                document.getElementById('netAmount').textContent = 'â‚¦' + firstBatch.toLocaleString('en-NG', {maximumFractionDigits: 2});
                feeInfo.style.display = 'block';
            } else {
                feeInfo.style.display = 'none';
            }
        }

        // Form Submissions
        function submitDeposit() {
            alert('âœ… Deposit request submitted successfully! You will receive a confirmation shortly.');
            bootstrap.Modal.getInstance(document.getElementById('depositModal')).hide();
        }

        function submitWithdrawal() {
            const type = document.getElementById('withdrawalType').value;
            if (type === 'force') {
                if (confirm('Force withdrawal includes a 2.5% charge. You will receive 50% now and 50% after 30 days. Continue?')) {
                    alert('âœ… Force withdrawal request submitted! Processing time: 24-48 hours.');
                    bootstrap.Modal.getInstance(document.getElementById('withdrawModal')).hide();
                }
            } else {
                alert('âœ… Withdrawal request submitted successfully! Processing time: 24-48 hours.');
                bootstrap.Modal.getInstance(document.getElementById('withdrawModal')).hide();
            }
        }

        function submitPayment() {
            alert('âœ… Payment processed successfully! Your loan balance has been updated.');
            bootstrap.Modal.getInstance(document.getElementById('paymentModal')).hide();
        }

        function submitLoanRequest() {
            const amount = parseFloat(document.getElementById('loanAmount').value) || 0;
            
            if (amount <= 0) {
                alert('âŒ Please enter a valid loan amount');
                return;
            }
            
            if (amount > 1350000) {
                alert('âŒ Loan amount exceeds maximum eligible amount of â‚¦1,350,000 (3x your savings)');
                return;
            }
            
            if (!document.getElementById('agreeTerms').checked) {
                alert('âŒ Please agree to the loan terms and conditions');
                return;
            }
            
            alert('âœ… Loan application submitted successfully!\n\nYour application will be reviewed within 3-5 business days.\n\nClub Member Rate: 5% p.a.\nMaximum Amount: 3x savings\nReminder: 3 days before due date');
            bootstrap.Modal.getInstance(document.getElementById('loanRequestModal')).hide();
        }

        function submitRollover() {
            if (confirm('This will pay â‚¦8,750 interest and extend your loan with 6% interest rate. Continue?')) {
                alert('âœ… Rollover request submitted!\n\nInterest payment of â‚¦8,750 will be processed.\nNew interest rate: 6% p.a.\nYou will be notified once approved.');
                bootstrap.Modal.getInstance(document.getElementById('rolloverModal')).hide();
            }
        }

        // Animation on load
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.stat-card, .card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                
                setTimeout(() => {
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
